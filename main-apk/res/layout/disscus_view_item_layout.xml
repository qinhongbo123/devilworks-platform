<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/disscus_item_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/disscus_item_text_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="@dimen/disscus_text_title" />

        <TextView
            android:id="@+id/disscus_item_date_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/disscus_item_text_id"
            android:textColor="#f0f0f0" />

        <TextView
            android:id="@+id/disscus_item_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/disscus_item_text_id"
            android:layout_toLeftOf="@id/disscus_item_date_id"
            android:gravity="right"
            android:paddingRight="8dp"
            android:textColor="#f0f0f0"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>