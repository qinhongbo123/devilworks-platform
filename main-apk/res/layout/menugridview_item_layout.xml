<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/grid_item_with"
    android:layout_height="@dimen/grid_item_height"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/main_gv_iv"
        android:layout_width="@dimen/grid_img_with"
        android:layout_height="@dimen/grid_img_height"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/main_gv_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textSize="@dimen/grid_text_size" />

</LinearLayout>