<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="300px"
  android:background="@drawable/other_day_bg"
  android:gravity="center_horizontal">
  <TextView
  android:id="@+id/day_week_text_id"
  android:layout_width="@dimen/date_temp_width"
  android:layout_height="@dimen/date_temp_height"
  android:text="星期三"
  android:gravity="center"
  />
  <ImageView
  android:id="@+id/day_weather_img_id"
  android:layout_width="@dimen/date_temp_width"
  android:layout_height="@dimen/date_temp_height"
  android:gravity="center"
  android:background="#000000ff"
  />
  <TextView
  android:id="@+id/day_temp_all_id"
  android:layout_width="@dimen/date_temp_width"
  android:layout_height="@dimen/date_temp_height"
  android:text="28/22℃"
  android:gravity="center"
  />
</LinearLayout>
